# Application
APP_NAME="Quản Lý Thu Chi"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Ho_Chi_Minh

# Database
DB_CONNECTION=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_DATABASE=financial_manager
DB_USERNAME=
DB_PASSWORD=

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# OAuth2 Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_LIFETIME=120
PASSWORD_TIMEOUT=10800

# File Upload
UPLOAD_MAX_SIZE=2048
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,xls,doc,docx

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=financial_manager_
CACHE_LIFETIME=3600

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug

# Currency API
CURRENCY_API_KEY=
CURRENCY_API_ENDPOINT=https://api.exchangerate-api.com/v4/latest/

# Notification Settings
NOTIFICATION_CHANNELS=mail,database
NOTIFICATION_EMAIL_BATCH_SIZE=50
NOTIFICATION_EMAIL_THROTTLE=60

# Performance
QUERY_CACHE_TIME=3600
ENABLE_QUERY_LOG=false
MAX_EXECUTION_TIME=30

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_2FA=false
ENABLE_API=false
ENABLE_EXPORT=true
ENABLE_DARK_MODE=true
ENABLE_MULTI_CURRENCY=true
ENABLE_NOTIFICATIONS=true

# Default Settings
DEFAULT_CURRENCY=VND
DEFAULT_LANGUAGE=vi
DEFAULT_THEME=light
DEFAULT_ITEMS_PER_PAGE=20

# Backup
BACKUP_ENABLED=true
BACKUP_PATH=storage/backups
BACKUP_NOTIFICATION_EMAIL=

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Hệ thống đang được bảo trì. Vui lòng quay lại sau."

# Analytics
ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=
